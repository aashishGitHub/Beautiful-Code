using System;

namespace SimpleApp
{
    static class Recursion
    {
       public static void RecursiveFactorial()
        {
            int n = Convert.ToInt32(Console.ReadLine());
            if (n > 0)
            {
                int result = factorial(n);
                Console.WriteLine(result);
            }
        }
        static int factorial(int n)
        {
            if (n == 1)
            {
                return 1;
            }
            else
            {
                return n*factorial(n - 1);
            }
        }
    }
}
